<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.myapplication.ui.activity.FirstActivity">
    <ImageView
        android:id="@+id/iv_first"
        android:src="@mipmap/logo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/androidFile_master"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="AndroidFile-master"
        android:layout_below="@id/iv_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

    </FrameLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drow_selector"
            android:drawableTop="@mipmap/ic_home_normal"
            android:gravity="center"
            android:text="首页"
             />

        <TextView
            android:id="@+id/tv_girl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drow_selector"
            android:drawableTop="@mipmap/ic_girl_normal"
            android:gravity="center"
            android:text="美女"
             />

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drow_selector"
            android:drawableTop="@mipmap/ic_video_normal"
            android:gravity="center"
            android:text="视频"
             />

        <TextView
            android:id="@+id/tv_care"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drow_selector"
            android:drawableTop="@mipmap/ic_care_normal"
            android:gravity="center"
            android:text="关注"
             />
    </LinearLayout>


</RelativeLayout>
